<html>
    <hta:application id="oHTA"
        border="none"
        caption="no"
        contextmenu="no"
        innerborder="no"
        scroll="no"
        showintaskbar="no"
    />
    <script language="VBScript">
        Sub Window_OnLoad
            ' Resize and position the window
            width = 1024 : height = 500
            window.resizeTo width, height
            window.moveTo screen.availWidth\2 - width\2, screen.availHeight\2 - height\2

            ' Set the window title
            document.title = "MoonlightSplash"

            ' Automatically close the windows after 30 seconds
            idTimer = window.setTimeout("vbscript:window.close", 30000)
        End Sub
    </script>
<body style="margin: 0; overflow: hidden;">
    <table border="0" cellspacing="0" cellpadding="0" width="100%" height="100%" style="margin: 0; padding: 0;">
        <tr style="margin: 0; padding: 0;">
            <td align="center" valign="middle" style="margin: 0; padding: 0;">
                <img src="moonlight.png" style="display: block; width: 100%; height: 100%; margin: 0; padding: 0;" />
            </td>
        </tr>
    </table>
</body>
</html>